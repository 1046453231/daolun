<view><scroll-view class="msg-list cu-chat" scroll-y="true" scroll-with-animation="{{scrollAnimation}}" scroll-top="{{scrollTop}}" scroll-into-view="{{scrollToView}}"><block wx:for="{{msgList.content}}" wx:for-item="msg" wx:for-index="index" wx:key="index"><view id="{{'msg'+msg._id}}"><block wx:if="{{msg.send_id==myuid}}"><view class="cu-item self"><view class="main"><view class="content bg-green shadow"><rich-text nodes="{{msg.text}}"></rich-text></view></view><view class="cu-avatar radius" style="background-image:url(../../static/my/nickAvatar.jpg);"></view><view class="date "><uni-dateformat vue-id="{{'fced1266-1-'+index}}" date="{{msg.created_time}}" threshold="{{[60000,3600000]}}" format="yy/MM/dd hh:mm:ss" bind:__l="__l"></uni-dateformat></view></view></block><block wx:else><view class="cu-item"><view class="cu-avatar radius" style="background-image:url(../../static/my/nickAvatar.jpg);"></view><view class="main"><view class="content shadow"><rich-text nodes="{{msg.text}}"></rich-text></view></view><view class="date "><uni-dateformat vue-id="{{'fced1266-2-'+index}}" date="{{msg.created_time}}" threshold="{{[60000,3600000]}}" format="yy/MM/dd hh:mm:ss" bind:__l="__l"></uni-dateformat></view></view></block></view></block></scroll-view><view class="cu-bar foot input"><view class="action"><text class="cuIcon-sound text-grey"></text></view><input class="solid-bottom" adjust-position="{{false}}" focus="{{false}}" maxlength="300" cursor-spacing="10" data-event-opts="{{[['input',[['__set_model',['','textMsg','$event',[]]]]]]}}" value="{{textMsg}}" bindinput="__e"/><view class="action"><text class="cuIcon-emojifill text-grey"></text></view><button data-event-opts="{{[['tap',[['sendText',['$event']]]]]}}" class="cu-btn bg-green shadow" bindtap="__e">发送</button></view></view>